<div class="container mt-5">
  <h1> <strong> Restaurants </strong> </h1>

  <table class="container mt-3">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Stars</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.category.capitalize %></td>
          <td><%= link_to 'Show', restaurant, class: "btn btn-danger" %></td>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
